{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@layouts/*": ["./layouts/*"],
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@assets/*": ["./assets/*"],
      "@plugins/*": ["./plugins/*"],
      "@store/*": ["./store/*"],
      "@generated/*": ["./generated/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "tailwind.config.ts",
    "codegen.ts",
    "next.config.mjs"
  ],
  "exclude": ["node_modules", "target", "src"]
}
